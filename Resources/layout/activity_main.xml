<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_conversor"
        style="@style/TitleText"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/CardStyle">

        <TextView
            android:id="@+id/fromCurrencyLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/usd_label"
            android:textColor="@color/textColor"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/amountInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_amount"
            style="@style/InputStyle"/>

        <Button
            android:id="@+id/swapButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_swap"
            style="@style/ButtonStyle"/>

        <TextView
            android:id="@+id/toCurrencyLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/eur_label"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/result_label"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/rateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rate_label"
            android:textColor="@color/textColor"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/convertButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_convert"
            style="@style/ButtonStyle"/>
    </LinearLayout>
</LinearLayout>